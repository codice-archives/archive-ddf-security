<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.2.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.2.0"
           xsi:schemaLocation="
  http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <ext:property-placeholder/>

    <cm:property-placeholder persistent-id="org.codice.ddf.security.handler.pki.ddf"
                             placeholder-prefix="$pkifilter{" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="realm"
                         value="DDF"/>
            <cm:property name="signatureProperties"
                         value="${ddf.home}/etc/ws-security/server/signature.properties"/>
            <!-- we may or may not need these encryption properties, just put them here for now -->
            <cm:property name="encryptionProperties"
                         value="${ddf.home}/etc/ws-security/server/encryption.properties"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <bean id="tokenFactory" class="org.codice.ddf.security.handler.api.PKIAuthenticationTokenFactory"
          init-method="init">
        <property name="realm" value="$pkifilter{realm}"/>
        <property name="signaturePropertiesPath" value="$pkifilter{signatureProperties}"/>
    </bean>
    <bean id="handler" class="org.codice.ddf.security.handler.pki.PKIHandler" >
        <property name="tokenFactory" ref="tokenFactory"/>
        <property name="realm" value="$pkifilter{realm}"/>
    </bean>

    <service ref="handler" interface="org.codice.ddf.security.handler.api.AuthenticationHandler"
             ranking="75">

    </service>

</blueprint>